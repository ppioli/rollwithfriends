{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Microsoft.EntityFramework": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithExceptionDetails"
    ],
    "WriteTo": [
      {
        "Name": "Debug",
        "Args": {
          "outputTemplate": "[{Level:u3}][{Timestamp:yy-MM-dd HH:mm:ss}][{SourceContext}]{Message:lj} {Exception} {NewLine}"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Level:u3}][{Timestamp:yy-MM-dd HH:mm:ss}][{SourceContext}]{Message:lj} {Exception} {NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Level:u3}][{Timestamp:yy-MM-dd HH:mm:ss}][{SourceContext}]{Message:lj} {Exception} {NewLine}"
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200;",
          "indexFormat": "supervisor-api-{0:yyyy.MM}",
          "autoRegisterTemplate": true,
          "autoRegisterTemplateVersion": "ESv2",
          "emitEventFailure": "WriteToSelfLog"
        }
      }
    ]
  },
  "JWT": {
    "ValidAudience": "ee",
    "ValidIssuer": "localhost",
    "SecretKey": "thisistheverybestsecret"
  },
  "AdminUser": {
    "Password": "1234",
    "Username": "admin",
    "Email": "admin@example.com"
  },
  "AllowedHosts": "*"
}
